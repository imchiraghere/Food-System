<html>
  <head>
    <title>Food Modification</title>
    <!------- Bootstrap CSS --------->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
    <!-- Bootstrap Font Icon CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
    />
    <!--------------------------JQuery----------------------------->
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>

    <!--------------------Food Type / Items  JS File------------>

    <script src="/javascripts/foodtype.js"></script>
  </head>
  <body>
    <div class="heading">
      <img src="/images/logo2.png" width="150" />
      Food Modification
    </div>
    <div class="box">
      <form action="/food/food_edit_del" method="post" class="row">
        <input type="hidden" name="foodid" value="<%=data.foodid%>" />
        <div class="col-md-6">
          <label for="type" class="form-label" style="color: #c5c7f0"
            ><b>Food Type's</b></label
          >
          <select id="type" name="type" class="form-select">
            <option value="<%=data.foodtype%>"><%=data.type%></option>
          </select>
        </div>

        <div class="col-md-6">
          <label for="item" class="form-label" style="color: #c5c7f0"
            ><b>Food Items</b></label
          >
          <select id="item" name="item" class="form-select">
            <option value="<%=data.fooditemname%>"><%=data.fooditem%></option>
          </select>
        </div>
        <div class="col-md-6">
          <label for="offertype" class="form-label" style="color: #c5c7f0"
            ><b>Food Offer Type</b></label
          >
          <select id="offertype" name="offertype" class="form-select">
            <option value="<%=data.offertype%>"><%=data.offertype%></option>
          </select>
        </div>
        <div class="col-md-6">
          <label for="offer" class="form-label" style="color: #c5c7f0"
            ><b>Food Offer</b></label
          >
          <select id="offer" name="offer" class="form-select">
            <option value="<%=data.offer%>"><%=data.offer%></option>
          </select>
        </div>
        <div class="col-md-8">
          <label for="price" class="form-label" style="color: #c5c7f0"
            ><b>Food Price</b></label
          >
          <input
            type="text"
            id="price"
            class="form-control"
            placeholder="Food Price"
            name="price"
            value="<%=data.price%>"
          />
        </div>
        <div class="col-md-6">
          <button
            type="submit"
            value="Edit"
            name="button"
            class="btn btn-outline-secondary button"
          >
            <b>Edit</b>
          </button>
        </div>

        <div class="col-md-6">
          <button
            type="submit"
            value="Delete"
            name="button"
            class="btn btn-outline-secondary button"
          >
            <b>Delete</b>
          </button>
        </div>
      </form>
    </div>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
    crossorigin="anonymous"
  ></script>
</html>
