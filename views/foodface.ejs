<style>
  body {
    background: url("/images/backg2.jpg");
    display: flex;
    /* align-items: center; */
    justify-content: center;
    flex-direction: column;
  }
  .box {
    width: 55%;
    height: 60vh;
    /* border-bottom-right-radius: 20px; */
    border-bottom-left-radius: 20px;
    border-top-right-radius: 30px;
    padding: 15px;
    margin-left: 30px;
    background-color: rgba(255, 255, 255, 0.733);
    box-shadow: 5px 20px 20px rgb(83, 82, 82);
    background: transparent;
    /* opacity: 0.5; */
  }
  /* .box:hover {
    transform: scale(1.1);
    transition: all 0.8s linear;
  } */
  .button {
    width: 100%;
    box-shadow: 0 5px 30px rgb(223, 222, 222);
    margin-top: 30px;
  }
  label {
    padding-top: 20px;
  }
  .heading {
    font-size: 35px;
    letter-spacing: 1px;
    font-weight: bold;
    text-align: left;
    color: #c5c7f0;
    margin-top: 20px;
    /* margin-bottom: 10px; */
    margin-left: 150px;
  }
  .heading2 {
    font-size: 20px;
    letter-spacing: 1px;
    font-weight: bolder;
    text-align: center;
    margin-bottom: 10px;
    margin-left: 10px;
    font-weight: bold;
  }
  .fl {
    margin-left: 100px;
    font-size: 15px;
    font-weight: bold;
    color: #c5c7f0;
  }
</style>
<html>
  <head>
    <title>Food Face</title>
    <!------- Bootstrap CSS --------->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
    <!-- Bootstrap Font Icon CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
    />
    <!--------------------------JQuery----------------------------->
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>

    <!--------------------Food Type / Items  JS File------------>

    <script src="/javascripts/foodtype.js"></script>
  </head>
  <body>
    <div class="heading">
      <img src="/images/logo2.png" width="150" />
      Food System
    </div>
    <div class="box">
      <form
        action="/food/foodsubmit"
        method="post"
        enctype="multipart/form-data"
        class="row"
      >
        <div class="col-md-6">
          <label for="type" class="form-label" style="color: #c5c7f0"
            ><b>Food Type's</b></label
          >
          <select id="type" name="type" class="form-select">
            <option selected>Choose Type...</option>
          </select>
        </div>

        <div class="col-md-6">
          <label for="item" class="form-label" style="color: #c5c7f0"
            ><b>Food Items</b></label
          >
          <select id="item" name="item" class="form-select">
            <option selected>Choose Item...</option>
          </select>
        </div>
        <div class="col-md-6">
          <label for="offertype" class="form-label" style="color: #c5c7f0"
            ><b>Food Offer Type</b></label
          >
          <select id="offertype" name="offertype" class="form-select">
            <option selected>Choose Offer Type...</option>
          </select>
        </div>
        <div class="col-md-6">
          <label for="offer" class="form-label" style="color: #c5c7f0"
            ><b>Food Offer</b></label
          >
          <select id="offer" name="offer" class="form-select">
            <option selected>Choose Offer...</option>
          </select>
        </div>
        <div class="col-md-6">
          <label for="price" class="form-label" style="color: #c5c7f0"
            ><b>Food Price</b></label
          >
          <input
            type="text"
            id="price"
            class="form-control"
            placeholder="Food Price"
            name="price"
          />
        </div>
        <div class="col-md-6">
          <label for="picture" class="form-label" style="color: #c5c7f0"
            ><b>Food Picture</b></label
          >
          <i class="bi bi-person-bounding-box" style="color: #c5c7f0"></i>
          <input type="file" name="pic" class="form-control" id="picture" />
        </div>

        <div class="col-md-6">
          <button type="submit" class="btn btn-outline-secondary button">
            <b>Submit</b>
          </button>
        </div>

        <div class="col-md-6">
          <button type="reset" class="btn btn-outline-secondary button">
            <b>Reset</b>
          </button>
        </div>
        <div
          class="col-md-12"
          style="
            display: flex;
            justify-content: center;
            padding: 5px;
            font-weight: bolder;
            color: aliceblue;
          "
        >
          <%=message %>
        </div>
      </form>
    </div>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
    crossorigin="anonymous"
  ></script>
</html>
